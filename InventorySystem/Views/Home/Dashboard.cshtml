@using InventorySystem.Core.Application.ViewModel.Producto;

@model ProductoViewModel
@{
    ViewData["Title"] = "¨DashBoard";
    Layout = "~/Views/Shared/_LayoutBar.cshtml";
}
<style>
    .sidebar i {
        line-height: 60px;
        position: relative;
        right: 32px;
    }

    .render-body{
        background: initial !important;
    }

    .sidebar li a:hover {
        background: transparent;
    }
</style>
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<div class="container">
    <div class="row mt-4">

        <div class="col-lg-6 shadow p-3 mb-5 bg-body-tertiary rounded">
            <h4>Totales Inventario <i class="fa-brands fa-product-hunt"></i></h4>
            <div class="card">
                <div class="bd-example">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Productos <i class="fa-solid fa-store"></i></th>
                                <th scope="col">Categorias <i class="fa-solid fa-tag"></i></th>
                                <th scope="col">Proveedores <i class="fa-solid fa-parachute-box"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.CountProducto</td>
                                <td>@Model.CountCategoria</td>
                                <td>@Model.CountProveedor</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6">

            <div class="card mb-5 p-3">
                <h4>  Producto con mayor Stock </h4>

                <div class="bd-example">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Producto </th>
                                <th scope="col">Cantidad </th>
                                <th scope="col">Area Ubicacion</th>
                            </tr>
                        </thead>
                        @foreach(var item in Model.productos)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td>@item.Stock</td>
                                    <td>@item.AreaUbicacion</td>
                                </tr>
                            </tbody>
                        }

                    </table>
                </div>
            </div>
        </div>

    </div>
</div>



