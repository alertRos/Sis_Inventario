@using InventorySystem.Core.Application.ViewModel.Proveedor;
@model List<ProveedorViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutBar.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Direccion
            </th>
            <th>
                Telefono
            </th>
            <th>
                Email
            </th>
            <th>
                Productos
            </th>
        </tr>
    </thead>
@foreach (var item in Model) {
  

        <tbody>
        <tr>
            <td>
                @item.Nombre
            </td>
            <td>
                @item.Direccion
            </td>
            <td>
                @item.Telefono
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.CountProductos
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Proveedor" asp-route-id="@item.Id">Edit</a>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#proveedorModal-@item.Id">
                Eliminar
                </button>
            </td>
        </tr>

        </tbody>

    <div class="modal fade" id="proveedorModal-@item.Id" tabindex="-1" aria-labelledby="proveedorModalLabel-@item.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="proveedorModalLabel-@item.Id">Eliminar el proveedor @item.Nombre</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="card-header bg-danger text-light">
                        <h4>Esta seguro que desea eliminar el proveedor @item.Nombre?</h4>
                    </div>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" asp-controller="Proveedor">
                        <button type="submit" class="btn btn-danger">Eliminar</button>

                    </form>
                    <button type="button" data-bs-dismiss="modal" class="btn btn-secondary">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}
    </table>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
