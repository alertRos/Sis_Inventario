@model InventorySystem.Core.Application.ViewModel.Proveedor.ProveedorSaveViewModel

@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Create";

    Layout = "~/Views/Shared/_LayoutBar.cshtml";
}
<link rel="stylesheet" href="~/css/CreateDesign.css" />
<div >
    <div>
        <div >
            <div class="main-container">
                <div class="h4-c">
                    <h4>@(editMode ? $"Editando la proveedor: {Model.Nombre}" : "Creando una nueva proveedor")</h4>
                </div>
                <div class="card">
                    <form method="post" asp-controller="Proveedor" asp-action="@(editMode ? "Edit":"Create")">
                        <div class="form-outline mb-4">
                            <input asp-for="Nombre" class="form-control form-control-lg"
                                   placeholder="Ingresar el nombre" maxlength="100" pattern="[a-zA-Z0-9]+" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                         <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" class="form-control form-control-lg"
                                   placeholder="Ingresar el email" maxlength="255" required/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <input asp-for="Telefono" class="form-control form-control-lg"
                                   placeholder="Ingresar el Telefono" minlength="7" maxlength="15" pattern="[0-9]" required />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <input asp-for="Direccion" class="form-control form-control-lg"
                                   placeholder="Ingresar el direccion" />
                            <span asp-validation-for="Direccion" class="text-danger" ></span>
                        </div>
                       
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button class="button-a"><a asp-controller="Proveedor" asp-action="Index" class="btn btn-danger">Volver atras</a></button>

                    </form>



                </div>

            </div>
        </div>

    </div>
</div>
