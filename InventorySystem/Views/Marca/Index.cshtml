@using InventorySystem.Core.Application.ViewModel.Marca;
@model List<MarcaViewModel>

@{
    ViewData["Title"] = "Lista de Marcas";
    int totalPaginas = (int)Math.Ceiling((double)Model.Count / ViewBag.TamanoPagina);
    int paginaActual = ViewBag.PaginaActual;

}

<div class="container mt-4">
    <h2>Lista de Marcas</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Productos</th>
                <th>Total Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var marca in Model)
            {
                <tr>
                    <td>@marca.Id</td>
                    <td>@marca.Nombre</td>
                    <td>@marca.CountProductos</td>
                    <td>@marca.TotalItems</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= totalPaginas; i++)
                {
                    <li class="page-item @(i == paginaActual ? "active" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-paginaActual="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
